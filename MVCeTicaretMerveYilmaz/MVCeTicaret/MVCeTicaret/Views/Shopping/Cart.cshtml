@model IEnumerable<MVCeTicaret.Models.OrderDetail>
@{
    ViewBag.Title = "Cart";
}

<h2>Sepetiniz</h2>

<table class="table table-bordered" style="text-align:center">
    <thead>
        <tr>
            <th>Sepetten Çıkar</th>
            <th>Ürün Görseli</th>
            <th>Ürün Adı</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Miktarı</th>
            <th>Miktar Güncelle</th>
            <th>İstek Listesine Ekle</th>
        </tr>
    </thead>
    <tbody>
        @{
            decimal toplamTutar = 0;
            foreach (var item in Model)
            {
                toplamTutar += item.TotalAmount;
                <tr>
                    <td>
                        @* TODO: Sepetten çıkarma action'ı yazılacak!.. *@
                        <a href="@Url.Action("RemoveFromCart","Shopping", new { id = item.OrderDetailID })" style="font-size:17pt;">
                            <span class="glyphicon glyphicon-trash" style="color:hotpink;"></span>
                        </a>
                    </td>
                    <td>
                        <img src="@Url.Content(item.Product.ImageUrl)" alt="@Url.Content(item.Product.AltText)" class="img-thumbnail" style="height:150px;" />
                    </td>
                    <td>
                        @item.Product.Name
                    </td>
                    <td>
                        @string.Format("{0:C2}", item.UnitPrice)
                    </td>
                    <td>
                        @item.Quantity @item.Product.QuantityPerUnit
                    </td>
                    <td>
                        @using(Html.BeginForm("UpdateQuantity", "Shopping", new { id = item.OrderDetailID}, FormMethod.Post))
                        {
                            <input type="number" name="quantity" value="@item.Quantity" min="1" max="@item.Product.UnitsInStock" />
                            <button type="submit">
                                <span class="glyphicon glyphicon-ok-sign" style="color:lightpink;"></span>
                            </button>
                        }
                    </td>
                    <td>
                        @* TODO: İstek listesine ekleme action'ı yazılacak... *@
                        <a href="@Url.Action("AddToWishListFromCart", "Shopping", new { id = item.OrderDetailID })" style="font-size:20pt;">
                            <span class="glyphicon glyphicon-heart" style="color:lightpink;"></span>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<hr />

@{
    if (Model.ToList().Count == 0)
    {
        <span class="lead">
            Sepetiniz boş...
        </span>
    }
    else
    {
        <span>
            <b>
                Ödenmesi Gereken Toplam Tutar = @string.Format("{0:C2}", toplamTutar)
            </b>
        </span>

        @* TODO: Siparişi Tamamla için action yazılacak!.. *@
        @Html.ActionLink("Siparişi Tamamla", "GoToPayment", "Shopping", null, new { @class = "btn btn-info", @style = "float:right;" })
    }
}