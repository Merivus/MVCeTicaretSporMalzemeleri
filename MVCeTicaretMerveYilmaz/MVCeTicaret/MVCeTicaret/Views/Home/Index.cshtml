                                <p>
                                    @* 1. LinkText  Görüntü ismi,2.StringAction Name Action ismi,3.ControllerName Control ismi, 4.routeValues sorgu değeri girdisi,5.htmlAttributes html özellikleri class rengi vs*@
                                    @Html.ActionLink("Ürün Detayı", "ProductDetail", "Product", new { id = item.ProductID }, new { @class = "btn btn-primary form-control" })
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>

        <div role="tabpanel" class="tab-pane fade" id="KampMalzemeleri">
            @{
                foreach (var item in TempData["KampMalzemeleri"] as IEnumerable<MVCeTicaret.Models.Product>)
                {
                    <div class="col-md-4">
