@model IEnumerable<MVCeTicaret.Models.Product>
@{
    ViewBag.Title = "Product";
}

<div class="container">
    <div class="row" style="margin-top:70px;">
        @{
            foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="@Url.Content(item.ImageUrl)" alt="@Url.Content(item.AltText)" />
                        <div class="caption">
                            <h4 style="height:70px;">
                                @item.Name - @string.Format("{0:C2}", item.UnitPrice)
                            </h4>
                            <p style="height:60px;overflow:auto;">
                                @item.ShortDescription
                            </p>
                            <p>
                                @* 1. LinkText  Görüntü ismi,2.StringAction Name Action ismi,3.ControllerName Control ismi, 4.routeValues sorgu değeri girdisi,5.htmlAttributes html özellikleri class rengi vs*@
                                @Html.ActionLink("Ürün Detayı", "ProductDetail" ,new { id = item.ProductID }, new { @class = "btn btn-primary form-control"})
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

