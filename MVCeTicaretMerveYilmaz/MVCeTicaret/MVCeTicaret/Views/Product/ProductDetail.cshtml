@model MVCeTicaret.Models.Product
@{
    ViewBag.Title = "ProductDetail";
}

<div class="container">
    <div class="row" style="margin-top:50px;">
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImageUrl)" alt="@Url.Content(Model.AltText)" class="img-thumbnail" />
        </div>
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            @{
                for (int i = 0; i < 5; i++)
                {
                    <span class="glyphicon glyphicon-star" style="font-size:17pt; color: lightblue"></span>
                }
            }

            <br /><br /><br />

            <p class="lead">
                <strong>Fiyatı: </strong> @string.Format("{0:C2}", Model.UnitPrice)
            </p>
            <p class="lead">
                <span style="background-color:lightblue;">
                    <strong>Stok Miktarı: </strong> @Model.UnitsInStock @Model.QuantityPerUnit
                </span>
            </p>

            @using (Html.BeginForm("AddToCart", "Shopping", new { id = Model.ProductID }, FormMethod.Post))
            {
                <p class="lead">
                    <strong>Miktar: </strong>
                    @{

                        if (Model.UnitsInStock == 0)
                        {
                            <button type="submit" disabled class="btn btn-lg btn-info">Sepete Ekle</button>
                        }
                        else
                        {
                            <input type="number" name="quantity" value="1" min="1" max="@Model.UnitsInStock" onchange="denetle(this,@Model.UnitsInStock)" />
                        }

                    }
                </p>

                <br /><br />

                if (Model.UnitsInStock == 0)
                {
                    <button type="submit" class="btn btn-lg btn-info">Sepete Ekle</button>
                }

                <button type="submit" class="btn btn-lg btn-info">Sepete Ekle</button>

                @*TODO: Offline'ken ekleyemesin...*@
                <a href="@Url.Action("AddToWishList", "Shopping", new { id = Model.ProductID})" class="btn btn-lg btn-primary">İstek Listesine Ekle</a>
            }


            @* TODO: Alışveriş için gereken alt yapı... *@
            @*@Html.ActionLink("Sepete Ekle", "AddToCart", "Shopping", new { id = Model.ProductID }, new { @class = "btn btn-info btn-lg" })*@

            @* İstek Listesine Ekle için action yazılacak... *@
            @*@Html.ActionLink("İstek Listesine Ekle", "", "", new { id = Model.ProductID }, new { @class = "btn btn-primary btn-lg" })*@



        </div>
    </div>

    <hr />


    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#description" data-toggle="tab">Ürün Açıklaması</a>
                </li>
                <li>
                    <a href="#reviews" data-toggle="tab">Yorumlar</a>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade in active" id="description" style="margin-top:20px;">
                    @Html.Raw(Model.LongDescription)
                </div>
                <div class="tab-pane fade" id="reviews" style="margin-top:20px;">
                    <ul>
                        @{
                            if ((ViewData["Reviews"] as IEnumerable<MVCeTicaret.Models.Review>).Count() == 0)
                            {
                                <li class="list-unstyled">Bu ürün hakkında henüz bir yorum yapılmamıştır...</li>
                            }
                            else
                            {
                                foreach (var item in ViewData["Reviews"] as IEnumerable<MVCeTicaret.Models.Review>)
                                {
                                    <li>
                                        <p><strong>@item.Name</strong></p>
                                        <p>@item.Comment</p>
                                    </li>
                                }
                            }
                        }

                    </ul>

                    @{
                        if (Session["OnlineKullanici"] != null)
                        {
                            <hr />
                            <h4>YORUM EKLE</h4>
                            <hr />

                            using (Html.BeginForm("AddReview", "Product", new { id = Model.ProductID }, FormMethod.Post))
                            {
                                <p>
                                    <strong>Ürünü Oyla: </strong>
                                    <input type="number" value="5" max="5" min="1" class="form-control" name="rate" onchange="denetle(this,5)" />
                                </p>

                                <p>
                                    <strong>Adınız: </strong>
                                    <input type="text" name="name" class="form-control" />
                                </p>

                                <p>
                                    <strong>Yorumunuz: </strong>
                                    <textarea rows="3" name="review" class="form-control"></textarea>
                                </p>

                                <input type="submit" class="btn btn-info form-control" value="EKLE" />
                            }
                        }
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script>
        function denetle(inputElement, maxValue) {
            var value = $(inputElement).val();
            if (value > maxValue)
                $(inputElement).val(maxValue);

            if (value < 0)
                $(inputElement).val(0);
        }
    </script>
}